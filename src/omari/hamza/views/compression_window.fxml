                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="compressButton" onAction="#actionCompress" style="-fx-background-color: #ffffff; -fx-border-color: #3f4045;" text="Compress" textFill="#3f4045">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <JFXSpinner fx:id="progressBar" layoutX="275.0" layoutY="175.0" visible="false" />
   </children>
</AnchorPane>
